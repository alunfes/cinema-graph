<% @showcases.each do |showcase| %>
<div class="container">
  <div class="span3">
  </div>

<div class="span6">
      <div class="row marketing" >
        <div class="col-lg-6">
          <h2><%= showcase.name %></h2>
          <p><img src=<%= showcase.url %> alt=<%= showcase.name %> class="img-rounded"></p>
<button type="button" class="btn btn-info">Good: <%= showcase.good %></button>
<button type="button" class="btn btn-danger">Bad: <%= showcase.bad %></button>
</div>
</div>
</div>
<div class="span3">
</div>
</div>
</br>
<% end %>


<%= link_to 'New Showcase', new_showcase_path %>
